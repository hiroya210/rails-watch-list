<div class="card mb-3" style="background: black;  max-width: 1200px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag (photo), size: "320x480", class:"card-img" %>
    </div>
    <div class="col-md-8">
      <div class="card-body d-flex flex-column justify-content-between">
        <div>
            <h3 class="card-title"><%= title %></h3>
            <h5 class="card-title">Rating: <%= rating %> out of 10</h5>
            <p class="card-text"><%= overview %></p>
        </div>
        <div class="d-flex justify-content-between">
            <p class="card-text"><em class="text-muted"><%= comment %></em></p>
            <p class="card-text"><%= render "components/modalButton" %></p>
        </div>
      </div>
    </div>
  </div>
</div>

 