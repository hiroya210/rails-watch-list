<!-- Button trigger modal -->
<a type="button" data-toggle="modal" data-target="#exampleModal">
 <i class="far fa-trash-alt fa-xs" style="color:red; font-size: 1rem;"></i>
</a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style="color: black; font-size: 24px;">
        <h5 class="modal-title" id="exampleModalLabel">Delete List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="color: black; font-size: 16px;">
        <p>Are you sure you want to delete this list?</p> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
         <%= link_to "Delete", path, class: "btn btn-danger", method: :delete %> 
      </div>
    </div>
  </div>
</div>