<div class="index-header">
 <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-info" %>
    <h3><%= @list.name %></h3>
    <%= link_to "Delete List", list_path(@list), class: "btn btn-warning", method: :delete, data: { confirm: "Are you sure?" } %>
</div>

<div class="show-cards">
  <% @list.movies.each do |movie| %>
    <div class="card text-white bg-dark mb-3" style="width: 18rem; max-height: 42rem;">
      <%= image_tag movie.poster_url, size:"320", class:"card-img-top" %>
    <div>
</div>

  <div class="card-body" >
    <p><i class="fas fa-star" style="color: yellow;" ></i> <%= movie.rating %></p>
    <h5 class="card-title"><%= movie.title %></h5>
    <p class="card-text">
      <% if movie.overview.length >= 80 %>
        <%= movie.overview.first(80) %>... <%= link_to "See more", "#" %>
      <% else %>
        <%= movie.overview %>
      <% end %>
      <%= link_to "Delete from list", bookmark_path(movie.bookmark_ids), method: :delete, data: { confirm: "Are you sure?" } %>
      </p>
  </div>
</div>
  <% end %>
</div>

